<style-scheme id="vicecity" name="Vice City" kind="dark">

    <_description>Vice City color scheme</_description>

    <style background="#808080" foreground="#808080"                                name="cursor"/>
    <style background="#0f0f0f" foreground="#c0c0c0"                                name="text"/>
    <style background="#1b1b1b"                                                     name="current-line"/>
    <style background="#020202" foreground="#6e6e6e"                                name="line-numbers"/>
    <style background="#0088ff" foreground="#ffffff"                                name="selection"/>
    <style background="#646464" foreground="#b8b8b8"                                name="right-margin"/>

    <style background="#2e5778" foreground="#ffffff"                                name="bracket-match"/>
    <style background="#8b0000"                                                     name="bracket-mismatch"/>

    <style background="#006400" foreground="#ffffff"                                name="search-match"/>

    <style                      foreground="#00ffff"                                name="def:boolean"/>
    <style                      foreground="#ff00ff"                italic="true"   name="def:comment"/>
    <style                      foreground="#00ff00"                                name="def:constant"/>
    <style background="#ff00ff" foreground="#ffffff"                                name="def:doc-comment-element"/>
    <style                      foreground="#ff8c00"                                name="def:identifier"/>
    <style background="#ffff00" foreground="#ff0000"                                name="def:note"/>
    <style                      foreground="#ffffff"                                name="def:preprocessor"/>
    <style                      foreground="#ff00ff"                italic="true"   name="def:shebang"/>
    <style                      foreground="#ff0000"                                name="def:specials"/>
    <style                      foreground="#fcff00"                                name="def:statement"/>
    <style                      foreground="#00ff00"                                name="def:type"/>
    <style background="#c00000" foreground="#ffffff"                                name="def:error"/>

    <style                      foreground="#00ffff"                                name="sh:function"/>
    <style                      foreground="#ffffff"                                name="sh:variable"/>

    <style                      foreground="#c0c0c0"                                name="xml:attribute-name"/>
    <style                      foreground="#00ffff"                                name="xml:element-name"/>
    <style                      foreground="#ff8c00"                                name="xml:entity"/>
    <style                      foreground="#ffd700"    bold="true"                 name="xml:processing-instruction"/>

</style-scheme>

